my $this = shift;
my $fixencodingscript = Foswiki::Configure::Package::_mapTarget($this->{_root}, 'tools/taskfixencoding');
my $hostname = "";
eval {
	require Foswiki::Contrib::VirtualHostingContrib::VirtualHost;
	Foswiki::Contrib::VirtualHostingContrib::VirtualHost->import();
	$hostname = Foswiki::Contrib::VirtualHostingContrib::VirtualHost->hostname();
};
my $hostFlag = "";
if($hostname){
	$hostFlag = "--host=$hostname";
}
system "$fixencodingscript --nodry $hostFlag";
