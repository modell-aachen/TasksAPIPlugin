{
    extends: ["eslint:recommended"],
    plugins: ["html"],
    parser: "babel-eslint",
    env: {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    rules: {
        "linebreak-style": ["error", "unix"],
        "no-console": "warn",
        "semi": ["error", "always"],
        "camelcase": ["error"],
        "no-tabs": "warn",
        "no-var": "error"
    }
}
